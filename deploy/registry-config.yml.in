---
apiVersion: v1
kind: Secret
metadata:
  name: container-registry-config
  labels:
    app: container-registry
stringData:
  # /etc/docker/registry/config.yml
  config.yml: |-
    version: 0.1
    log:
      fields:
        service: registry
    storage:
      cache:
        blobdescriptor: inmemory
      filesystem:
        rootdirectory: /var/lib/registry
    http:
      addr: :5000
      headers:
        X-Content-Type-Options: [nosniff]
    health:
      storagedriver:
        enabled: true
        interval: 10s
        threshold: 3
    proxy:
      remoteurl: https://docker.io
      username: @@USERNAME@@
      password: @@PASSWD@@
